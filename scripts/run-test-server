#!/bin/bash

rm -Rf integration/fixture-app/target/

if [ "$1" == "node" ]; then
    cd integration/chlorine-test && npm install && nohup npx shadow-cljs watch dev &
else
    docker run -d \
        --rm \
        --name=test-server \
        --network=host \
        -it \
        -u root \
        -v`pwd`:/work \
        atom \
        sh -c 'cd /work/integration/chlorine-tests && npm install && npx shadow-cljs watch tests'
fi
